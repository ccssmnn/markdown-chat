{
  "name": "md-ai",
  "version": "0.0.1",
  "author": "Carl Assmann <assmann@hey.com> (https://carlassmann.com)",
  "description": "AI conversations in markdown with your preferred editor",
  "url": "https://github.com/ccssmnn/md-ai",
  "bugs": {
    "url": "https://github.com/ccssmnn/md-ai/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccssmnn/md-ai.git"
  },
  "keywords": [
    "ai",
    "llm",
    "chatgpt",
    "markdown",
    "typescript",
    "cli"
  ],
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "tsx --test src",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check-format": "prettier --check .",
    "ci": "pnpm build && pnpm check-format && pnpm check-exports && pnpm test"
  },
  "bin": {
    "md-ai": "./lib/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "@ai-sdk/google": "^1.2.11",
    "@clack/prompts": "^0.10.1",
    "@types/mdast": "^4.0.4",
    "ai": "^4.3.6",
    "diff": "^7.0.0",
    "glob": "^11.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.7.0"
}
