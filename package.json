{
  "name": "@ccssmnn/md-ai",
  "version": "0.3.0",
  "author": "Carl Assmann <assmann@hey.com> (https://carlassmann.com)",
  "description": "AI conversations and agentic coding in markdown with your preferred editor",
  "url": "https://github.com/ccssmnn/md-ai",
  "bugs": {
    "url": "https://github.com/ccssmnn/md-ai/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccssmnn/md-ai.git"
  },
  "keywords": [
    "ai",
    "chat",
    "agent",
    "llm",
    "markdown",
    "typescript",
    "cli",
    "vim",
    "helix",
    "vscode"
  ],
  "files": [
    "src",
    "lib",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepublishOnly": "pnpm run ci",
    "prepare": "pnpm run build",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit -p tsconfig.json",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check-format": "prettier --check .",
    "check-tests": "tsx --test src/*.test.ts src/**/*.test.ts",
    "ci": "pnpm build && pnpm check-tests && pnpm check-format && pnpm check-exports"
  },
  "bin": {
    "md-ai": "./lib/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.11",
    "@ai-sdk/google": "^1.2.17",
    "@ai-sdk/openai": "^1.3.22",
    "@clack/prompts": "^0.10.1",
    "ai": "^4.3.15",
    "commander": "^13.1.0",
    "glob": "^11.0.2",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.15.17",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.7.0"
}